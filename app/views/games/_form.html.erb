<%= form_with(model: game, local: true, html: {class: 'form-group'}) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :game_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :game_description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :system %>
    <%= form.select :system, systems_traduction, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :privacy %>
    <%= form.select :privacy, privacies_traduction('g'), {}, class:'form-control' %>
    <small>Public: anyone can see. Restricted: only you and the gamers can see. Private: only you can see.</small>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions mt-3">
    <%= form.submit class: 'btn btn-info' %>
  </div>
<% end %>
